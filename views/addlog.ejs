<%- include('partials/header') %>
<div class="background">
  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
        <h1 class="heading"><b>Your exercise entry</b></h1>
          <div class="card-body">
            <form action="/addlog" method="POST">
              <div class="form-group">
                <label for="activity"></label>
                <select name="activity">
                    <% for( let index = 0;index<act.activities.length;index++){ %>
                        <option value="<%= act.activities[index] %>"><%= act.activities[index] %></option>
                    <% } %>
                </select>
              </div>
              <div class="form-group">
                <label for="duration"></label>
                <input type="number" class="form-control" name="duration" placeholder="in minutes">
              </div>
              <div class="form-group">
                <label for="date"></label>
                <input type="date" class="form-control" name="date" placeholder="date">
              </div>
              <button type="submit" class="btn btn-dark">Register</button>
            </form>
        </div>
    </div>
  </div>
</div>
</div>
</div>
<%- include('partials/header') %>